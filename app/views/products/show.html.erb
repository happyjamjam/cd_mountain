<div>
	<%# attachment_image_tag @product.jacket_img, :image, alt: "jacket_image", class: "product_jacket" %>

	<div class="product_detail">
		<h2><%= @product.product_name %></h2>
		<%# @artists.artist_name %>/ <%# @label.label_name %>
		<%# @genre.genre_name %>
		<%= @product.price %> 円（税抜き価格）
	</div>

	<div class="#">
		¥ <%= @product.price %>
		在庫数 <%= @product.stock %> / <%= @product.sales_status %>
		<%= form_for(@cart) do |f| %>
			<%= f.label :quantity, "数量" %>
			<%= f.text_field :quantity %>
			<%= f.submit "カートに入れる", class: "btn btn-primary" %>
		<% end %>
	</div>

	<div id="favorite_buttons_<%= @product.id %>">
    <%= render partial: 'favorites/favorite', locals: { product: @product } %>
  </div>

	<h2> トラックリスト</h2>
	<!-- ディスクごとに曲名を表示させる方法がわからないのでコメントアウトしてあります -->
	<%# @disks.each do |d| %>
		ディスク<%## d.disk_number %>
		<%# @musics.each do |m| %>
		  トラック<%# m.track_number %>. <%# m.music_title %>
		<%# end %>
	<%# end %>

	<%= link_to "レビューを投稿する", "#", class: "review-button btn btn-success" %>

	<h2> レビュー</h2>

	<table class="table">
		<tr>
			<th> 投稿者</th>
			<th> タイトル</th>
			<th> 本文</th>
		</tr>

		<% @reviews.each do |r| %>

			<tr>
				<td>
					<%= r.user.first_name %>
				</td>
				<td>
					<%= r.title %>
				</td>
				<td>
					<%= r.body %>
				</td>
			</tr>
		<% end %>
		<%= paginate @reviews, class: "paginate" %>
	</table>
</div>