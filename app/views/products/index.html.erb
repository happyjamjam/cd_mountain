<div class = "container">
 <div class = "row">
   <div class = "col-xs-9">
     <h3>商品一覧</h3>
     <div class = "product-wrapper">
  	  <% @products.each do |product| %>
  		<div>
  			<%# attachment_image_tag product, :jacket_img%><br>
  			商品名：<%= link_to product.product_name, product_path(product) %><br>
  			アーティスト名：
  			<%# @artists.each do |artist| %>
  				<%# artist.artist_name %>
  			<%# end %>
  			<br>
  			価格：<%= product.price %> 円
  		</div>
  	  <% end %>
     </div>
  	 <%= paginate @products, class: "paginate" %>
   </div>
   
   <div class = "col-xs-3">
     <div class = "ranking-box">
      <h3>人気ランキング
       <i class="fas fa-crown"style = "color: gold;"></i>
      </h3>
      <% @all_ranks.each.with_index(1) do |product , i| %>
        <%= i %> 位　
        <div><img src= "assets/no_img.jpg" width="50" height="50"></div>
         <div class = "rank-box">
         <%= link_to product.product_name,product_path(product) %>
         <p>価格<%= product.price %>円 (税別)</p>
         </div>
      <% end %> 
     </div>
   </div>
 </div>
</div>


<script type="text/javascript">
$(document).ready(function(){

  $('.slider').slick({
    autoplay: true,
    arrows: false,
    autoplaySpeed: 0,
    cssEase: 'linear',
    speed: 3000,
    swipe: false,
    slidesToShow: 14,
    slidesToScroll: 1,
  });

});
</script>