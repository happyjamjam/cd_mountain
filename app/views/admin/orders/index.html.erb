<div class = "container">
 <div class = "row">
	<h1>購入履歴一覧</h1>
 <table class = "table">
  <thead>
	<tr>
	 <th>注文ID</th>
	 <th>購入者名</th>
	 <th> ステータス</th>
	 <th> 注文日</th>
	 <th></th>
	</tr>
  </thead>

 <% @orders.each do |order| %>
	<tr>
		<td> <%= order.id %></td>
		<td> <%= order.user.full_name %></td>
		<td> <%= order.shipping_status %></td>
		<td> <%= order.created_at.to_date %></td>
		<td> <%= link_to "購入詳細", admin_order_path(order) %>
	</tr>
 <% end %>
 </table>
 </div>
</div>

