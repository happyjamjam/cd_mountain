<h1>購入履歴一覧</h1>

<table class = "table">
	<tr>
		<th>注文ID</th>
		<th>名前</th>
		<th> ステータス</th>
		<th> 注文日</th>
	</tr>

	<% @orders.each do |order| %>
		<tr>
			<td> <%= order.id %></td>
			<td> <%= order.user.full_name %></td>
			<td> <%= order.shipping_status %></td>
			<td> <%= order.created_at %></td>
			<td> <%= link_to "購入詳細", admin_order_path(order) %>
		</tr>
	<% end %>
</table>
