<table class="table">
	<tr>
		<th> お問い合わせ内容</th>
	</tr>
	<tr>
		<td> 名前</td>
		<td> <%= @contact.user.last_name %> <%= @contact.user.first_name %></td>
	</tr>
	<tr>
		<td> メールアドレス</td>
		<td> <%= @contact.user.email %></td>
	</tr>
	<tr>
		<td> お問い合わせ内容</td>
		<td> <%= @contact.contact_text %></td>
	</tr>
</table>

<h3>お問い合わせ返信フォーム</h3>
  <%= form_for [:admin, @contact] do |f| %>
  <%= f.text_area :reply_text %>
  <p><%= f.submit '送信', class: "btn btn-success col-xs-2 col-xs-offset-9" %></p>
 <% end %>

