<h1>レビュー編集</h1>

<div class = "product-box">
  <%= attachment_image_tag @product, :product_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>]
  <%= @product.product_name %>
  <%= @artists.artist_name %>
  <%= @label.label_name %> 
  <%= @genre. genre_name %>
  
 </div>

 <%= form_for(@review)  do |f| %>
　　<div class="form-group">
        <%= f.label :name, '投稿者名' %>
        <%= f.text_field :name, class: 'form-control' %>   
   </div>
   <div class="form-group">
        <%= f.label :title, 'レビュータイトル' %>
        <%= f.text_field :title, class: 'form-control' %>
   </div>
   <div class="form-group">
        <%= f.label :body, 'レビュー本文' %>
        <%= f.text_area :body, class: 'form-control', rows:10 %>
   </div>
        <%= f.submit '編集完了', class: 'btn btn-warning ' %>
        <%= f.submit '削除', review_path, method: :delete , class="btn btn-danger" %>
 <% end %>

