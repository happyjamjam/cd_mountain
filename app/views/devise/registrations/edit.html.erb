<h2>登録情報 <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>


<table>
    <tr>
      <td>
        <div class="field">
          <%= f.label :姓 %>
          <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
        </div>
      </td>
      <td>
        <div class="field">
          <%= f.label :名 %>
          <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
        </div>
      </td>
      </tr>

      <tr>
      <td>
        <div class="field">
          <%= f.label :カナ姓 %>
          <%= f.text_field :kana_last_name, autofocus: true, autocomplete: "kana_last_name" %>
        </div>
      </td>
      <td>
        <div class="field">
          <%= f.label :カナ名 %>
          <%= f.text_field :kana_first_name, autofocus: true, autocomplete: "kana_first_name" %>
        </div>
      </td>
    </tr>
  </table>

  <div class="field">
    <%= f.label :郵便番号 %>
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
    <em>(ハイフン不要)</em>
  </div>

  <div class="field">
    <%= f.label :住所 %>
    <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
  </div>

  <div class="field">
    <%= f.label :電話番号 %>
    <%= f.text_field :tel, autofocus: true, autocomplete: "tel" %>
    <em>(ハイフン不要)</em>
  </div>

  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :新パスワード %> <i>(変更しない場合は空欄にしてください)</i><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %>文字以上</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :新パスワードの確認 %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :現在のパスワード %> <br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit "編集完了" %>
  </div>
<% end %>

<h3>アカウントの削除</h3>

<p><%= button_to "アカウント削除", registration_path(resource_name), data: { confirm: "本当に削除しますか?" }, method: :delete %></p>

<%= link_to "戻る", :back %>
