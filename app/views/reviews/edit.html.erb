<div class = "container">
 <div class = "row">
  <div class = "col-lg-9">
<%= notice %>
   <h3>レビュー投稿</h3>
    <div class = "product-box">
     <%= attachment_image_tag @product, :jacket_img, :fill, 200, 200, format: 'jpeg', fallback: "no_img.jpg" %><br>
     <p class = "product-name-inreview"><%= @product.product_name %></p><br>
    <% @product.artist_products.each do |ap| %>
     <p class = "review-object">アーティスト名：<%= ap.artist.artist_name %></p>
    <% end %>
     <p class = "review-object">レーベル：<%= @label.label_name %></p>
     <p class = "review-object">ジャンル名：<%= @genre. genre_name %></p>
    </div>
   <%= form_for [@product, @review] do |re| %>
　　 <div class="form-group-name">
      <%= re.label :name, '投稿者名'  %>
      <%= re.text_field :name, class: 'form-control' %>
    </div>
      <div class="form-group-title">
      <%= re.label :title, 'レビュータイトル' %>
      <%= re.text_field :title, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= re.label :body, 'レビュー本文' %><br>
      <%= re.text_area :body, class: 'form-control', rows:12 %>
    </div>
    <div class = "button-box">
      <%= re.submit '投稿', class: 'btn btn-info btn-lg btn-block' %>
      <% end %>
    </div>
  </div>
 </div>
</div>
